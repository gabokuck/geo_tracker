<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Monitor de GPS</h1>
    <%= link_to "Nuevo Dispositivo", new_device_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700" %>
  </div>

  <div 
    id="map" 
    class="w-full h-96 rounded-lg shadow-md mb-8 border border-gray-300 z-0"
    data-controller="map"
    data-map-markers-value="<%= @devices.map { |d| { lat: d.last_latitude, lng: d.last_longitude, name: d.serial_number } }.to_json %>"
  ></div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% @devices.each do |device| %>
      <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-100">
        <div class="px-4 py-5 sm:p-6">
          <dt class="text-sm font-medium text-gray-500 truncate">Serial: <%= device.serial_number %></dt>
          <dd class="mt-1 text-2xl font-semibold text-gray-900"><%= device.description %></dd>
          <div class="mt-2 text-xs text-gray-400">
            <%= device.last_latitude %>, <%= device.last_longitude %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>