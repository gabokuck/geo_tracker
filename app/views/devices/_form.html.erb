<%= form_with(model: device, class: "contents", data: { controller: "picker" }) do |form| %>
  
  <% if device.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(device.errors.count, "error") %> prohibited this device from being saved:</h2>
      <ul>
        <% device.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6 bg-white p-6 rounded-lg shadow-md border border-gray-200 max-w-2xl mx-auto">
    
    <div>
      <%= form.label :serial_number, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :serial_number, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div class="border-t border-gray-100 pt-4">
      <h3 class="text-lg font-medium text-gray-900 mb-4">UbicaciÃ³n</h3>
      
      <div 
        data-picker-target="map" 
        class="w-full h-64 rounded-lg border border-gray-300 mb-4 z-0 shadow-inner"
      ></div>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= form.label :last_latitude, "Latitud", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_latitude, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
              data: { picker_target: "latitude", action: "input->picker#updateMapFromInputs" } 
          %>
        </div>

        <div>
          <%= form.label :last_longitude, "Longitud", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :last_longitude, 
              class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
              data: { picker_target: "longitude", action: "input->picker#updateMapFromInputs" } 
          %>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">ðŸ’¡ Tip: Arrastra el pin en el mapa o escribe las coordenadas manualmente.</p>
    </div>

    <div class="flex items-center justify-end pt-4 border-t border-gray-100">
      <%= link_to "Cancelar", devices_path, class: "text-sm font-medium text-gray-500 hover:text-gray-900 mr-4" %>
      <%= form.submit "Guardar Dispositivo", class: "bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 cursor-pointer" %>
    </div>

  </div>
<% end %>